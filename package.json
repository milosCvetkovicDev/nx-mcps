{
  "name": "@./source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "// MCP Development Scripts": "",
    "mcp:new": "nx generate @./source:mcp-app",
    "mcp:build": "nx run-many --target=build --projects=tag:mcp-server",
    "mcp:build:all": "nx run-many --target=build --all",
    "mcp:dev": "nx run-many --target=dev --projects=tag:mcp-server --parallel=false",
    "mcp:serve": "nx run-many --target=serve --projects=tag:mcp-server --parallel=false",
    "mcp:test": "nx run-many --target=test --projects=tag:mcp-server",
    "mcp:test:watch": "nx run-many --target=test --projects=tag:mcp-server --watch",
    "mcp:lint": "nx run-many --target=lint --projects=tag:mcp-server",
    "mcp:typecheck": "nx run-many --target=typecheck --projects=tag:mcp-server",
    
    "// Individual MCP Server Scripts": "",
    "mcp:run": "node",
    "mcp:debug": "node --inspect",
    "mcp:list": "nx list",
    "mcp:show-projects": "nx show projects --projects=tag:mcp-server",
    
    "// Workspace Scripts": "",
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "typecheck": "nx run-many --target=typecheck --all",
    "format": "nx format:write",
    "format:check": "nx format:check",
    
    "// Nx Commands": "",
    "graph": "nx graph",
    "affected:graph": "nx affected:graph",
    "affected:build": "nx affected --target=build",
    "affected:test": "nx affected --target=test",
    "affected:lint": "nx affected --target=lint"
  },
  "private": true,
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nx/eslint": "21.1.3",
    "@nx/eslint-plugin": "21.1.3",
    "@nx/js": "21.1.3",
    "@nx/node": "^21.1.3",
    "@nx/vite": "21.1.3",
    "@nx/web": "21.1.3",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/node": "^18.16.9",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "jiti": "2.4.2",
    "jsonc-eslint-parser": "^2.1.0",
    "nx": "21.1.3",
    "prettier": "^2.6.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.3.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.19.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
